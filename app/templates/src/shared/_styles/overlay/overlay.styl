.overlay
    z-index: 99;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    cursor: pointer;
    background-color: #2A3237;
    opacity: 0;
    visibility: hidden;
    transition: .2s ease-in-out;
    &.is-visible
        display: block;
        opacity: .7;
        visibility: visible;
