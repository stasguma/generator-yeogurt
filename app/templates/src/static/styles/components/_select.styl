select
    position: relative;
    padding: 10px 24px 10px 16px;
    appearance: none;
    border-radius: $global-radius;
    border: 1px solid $select-border-color;
    background: url("data:image/svg+xml;utf8;base64,") calc(100% + 8px - 16px) 50%/8px auto no-repeat $c--white;
    color: black;
    // font(mukta, 16px, 18px);

    &:focus
        border-color: $select-border-color-focus;
        transition: .15s;
    &[disabled]
        background-color: $c--gray;
        opacity: .8;
        color: #b5b5b5;
